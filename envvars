#!/usr/bin/bash

# vim:fileencoding=utf-8:foldmethod=marker

# environment variables for bashrc
#
# author: RilCritch

## Misc {{{
#
export EDITOR='nvim'
export VISUAL='nvim'
export HISTCONTROL=ignoreboth:erasedups
